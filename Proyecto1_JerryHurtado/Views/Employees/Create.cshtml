@model Proyecto1_JerryHurtado.Models.ViewModels.EmployeeVM
@{
    ViewData["Title"] = "Nuevo empleado";
}

<div id="subheader-container"></div>
<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header card-header-custom">
            <h3 class="card-title card-title-custom">
                <img src="/icons/clipboard2-plus.svg" alt="Add icon" width="24" height="24"> Nuevo empleado
            </h3>
        </div>

        @using (Html.BeginForm("Create", "Employees", FormMethod.Post, new { @class = "form-horizontal", id = "formCreateEmployee" }))
        {
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger px-4 pt-3"></div>

            <div class="card-body px-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="PersonalIdNumber" class="form-label form-label-custom"></label>
                        <input asp-for="PersonalIdNumber" class="form-control form-control-custom" data-mask="IDcard" placeholder="Cédula del empleado (9 dígitos)" />
                        <span asp-validation-for="PersonalIdNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Birthdate" class="form-label form-label-custom"></label>
                        <input asp-for="Birthdate" type="date" class="form-control form-control-custom" />
                        <span asp-validation-for="Birthdate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HireDate" class="form-label form-label-custom"></label>
                        <input asp-for="HireDate" type="date" class="form-control form-control-custom" />
                        <span asp-validation-for="HireDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TerminationDate" class="form-label form-label-custom"></label>
                        <input asp-for="TerminationDate" type="date" class="form-control form-control-custom" />
                        <span asp-validation-for="TerminationDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DailySalary" class="form-label form-label-custom"></label>
                        <input asp-for="DailySalary" class="form-control form-control-custom" placeholder="₡0.00" />
                        <span asp-validation-for="DailySalary" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Type" class="form-label form-label-custom"></label>
                        <select asp-for="Type" asp-items="ViewBag.EmployeeTypes" class="form-select form-control-custom">
                            <option value="" selected disabled>Seleccione un tipo</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light px-4 py-3">
                <div class="row">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <button type="submit" id="btn-create" class="btn btn-primary w-100">
                            <img src="/icons/save.svg" alt="Save icon"> Guardar
                        </button>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <img src="/icons/arrow-left-circle.svg" alt="Back icon"> Regresar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/Shared/CrudOperations.js"></script>
    <script src="~/js/Employees/Create.js"></script>
}