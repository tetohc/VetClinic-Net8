@model Proyecto1_JerryHurtado.Models.ViewModels.PetVM
@{
    ViewData["Title"] = "Actualizar mascota";
}

<div id="subheader-container"></div>
<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header card-header-custom">
            <h3 class="card-title card-title-custom">
                <img src="/icons/pencil-white.svg" alt="Edit icon" width="24" height="24"> Actualizar Mascota
            </h3>
        </div>

        @using (Html.BeginForm("Edit", "Pets", FormMethod.Post, new { @class = "form-horizontal", id = "formEditPet" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger px-4 pt-3"></div>

            <div class="card-body px-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="OwnerIdNumber" class="form-label form-label-custom"></label>
                        <input asp-for="OwnerIdNumber" class="form-control form-control-custom" data-mask="IDcard" placeholder="Cédula del propietario (9 dígitos)" />
                        <span asp-validation-for="OwnerIdNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PetSpecies" class="form-label form-label-custom"></label>
                        <select asp-for="PetSpecies" asp-items="ViewBag.PetSpecies" class="form-select form-control-custom">
                            <option value="" selected disabled>Seleccione un tipo</option>
                        </select>
                        <span asp-validation-for="PetSpecies" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Race" class="form-label form-label-custom"></label>
                        <input asp-for="Race" class="form-control form-control-custom" placeholder="Raza de la mascota" />
                        <span asp-validation-for="Race" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Age" class="form-label form-label-custom"></label>
                        <input asp-for="Age" type="number" class="form-control form-control-custom" placeholder="Edad de la mascota" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Color" class="form-label form-label-custom"></label>
                        <input asp-for="Color" class="form-control form-control-custom" placeholder="Color de la mascota" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LastVisitDate" class="form-label form-label-custom"></label>
                        <input asp-for="LastVisitDate" type="date" class="form-control form-control-custom" />
                        <span asp-validation-for="LastVisitDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="OwnerPhoneNumber" class="form-label form-label-custom"></label>
                        <input asp-for="OwnerPhoneNumber" class="form-control" data-mask="phoneNumber" placeholder="Teléfono del propietario (8 dígitos)" />
                        <span asp-validation-for="OwnerPhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="OwnerEmailAddress" class="form-label form-label-custom"></label>
                        <input asp-for="OwnerEmailAddress" type="email" class="form-control form-control-custom" placeholder="Email del propietario" />
                        <span asp-validation-for="OwnerEmailAddress" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="card-footer bg-light px-4 py-3">
                <div class="row">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <button type="submit" id="btn-update" class="btn btn-primary w-100">
                            <img src="/icons/save.svg" alt="Save icon"> Guardar
                        </button>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <img src="/icons/arrow-left-circle.svg" alt="Back icon"> Regresar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/Shared/CrudOperations.js"></script>
    <script src="~/js/Pets/Edit.js"></script>
}