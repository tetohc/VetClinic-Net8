@model Proyecto1_JerryHurtado.Models.ViewModels.PetVM
@{
    ViewData["Title"] = "Detalle de la mascota";
}

<div id="subheader-container"></div>
<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header card-header-custom">
            <h3 class="card-title card-title-custom">
                <img src="/icons/list.svg" alt="Pet icon" width="24" height="24" fill="white"> Detalle de la mascota
            </h3>
        </div>

        <div class="card-body px-4">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label form-label-custom">
                        <img src="/icons/person-vcard.svg" alt="Owner ID icon" width="20" height="20"> Cédula del propietario
                    </label>
                    <p class="form-control-plaintext">@Model.OwnerIdNumber</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label form-label-custom">
                        <img src="/icons/species.svg" alt="Species icon" width="20" height="20"> Especie
                    </label>
                    <p class="form-control-plaintext">@Model.PetSpeciesDisplay</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label form-label-custom">
                        <img src="/icons/tags.svg" alt="Race icon" width="20" height="20"> Raza
                    </label>
                    <p class="form-control-plaintext">@Model.Race</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label form-label-custom">
                        <img src="/icons/hourglass-split.svg" alt="Age icon" width="20" height="20"> Edad
                    </label>
                    <p class="form-control-plaintext">@Model.Age años</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label form-label-custom">
                        <img src="/icons/palette.svg" alt="Color icon" width="20" height="20"> Color
                    </label>
                    <p class="form-control-plaintext">@Model.Color</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label form-label-custom">
                        <img src="/icons/calendar-check.svg" alt="Last visit icon" width="20" height="20"> Última visita
                    </label>
                    <p class="form-control-plaintext">@Model.LastVisitDateDisplay</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label form-label-custom">
                        <img src="/icons/telephone.svg" alt="Phone icon" width="20" height="20"> Teléfono del propietario
                    </label>
                    <p class="form-control-plaintext">@Model.OwnerPhoneNumber</p>
                </div>

                <div class="col-md-6">
                    <label class="form-label form-label-custom">
                        <img src="/icons/envelope.svg" alt="Email icon" width="20" height="20"> Correo electrónico
                    </label>
                    <p class="form-control-plaintext">@Model.OwnerEmailAddress</p>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light px-4 py-3">
            <div class="row">
                <div class="col-md-12">
                    <a href="@ViewBag.ReturnUrl" class="btn btn-secondary w-100">
                        <img src="/icons/arrow-left-circle.svg" alt="Back icon"> Regresar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Pets/Detail.js"></script>
}